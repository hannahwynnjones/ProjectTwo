<h1>Edit</h1>

<form method="POST" action="/blogs/<%= blog.id %>">
  <input type="hidden" name="_method" value="PUT">

  <div class="form-group">
    <label for="username">Username</label>
    <textarea name="username" id="username" placeholder="Username" class="form-control"><%= blog.username %></textarea>
  </div>

  <div class="form-group">
    <label for="dish">Dish</label>
    <textarea name="dish" id="dish" placeholder="Dish" class="form-control"><%= blog.dish %></textarea>
  </div>

<%# may need to look at images later when i add them %>

  <div class="form-group">
    <label>Pictures</label>
    <input type="text" name="images[]" class="form-control" value="<%= blog.images[0] %>">
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" placeholder="Description" class="form-control"><%= blog.description %></textarea>
  </div>

  <div class="form-group">
    <label for="recipie">Recipie</label>
    <textarea name="recipie" id="recipie" placeholder="Recipie" class="form-control"><%= blog.recipie %></textarea>
  </div>

  <div class="form-group">
    <label for="tag">Tag</label>
    <textarea name="tag" id="tag" placeholder="Tag" class="form-control"><%= blog.tag %></textarea>
  </div>

  <button>Update</button>
</form>
