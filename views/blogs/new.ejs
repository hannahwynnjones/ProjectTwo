<h1>Add a blog to you account</h1>

<form method="POST" action="/blogs" enctype="multipart/form-data">
<%# <form method="POST" action="/blogs" enctype="multipart/form-data">%>
<%# added username to link to edit/delete buttons, if it works without, i'll remove this%>

  <div class="form-group">
    <label for="dish">Dish</label>
    <textarea name="dish"></textarea>
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" placeholder="recipes, Description and your comments"></textarea>
  </div>

  <div class="form-group">
    <label class="recipeTag" for="tag">Tag</label>
    <textarea name="tag" placeholder="One work to describe your dish"></textarea>
  </div>

  <div class="form-group">
    <label for="filename">Image file</label>
    <input type="file" name="filename" id="filename">
  </div>

  <button class="addBlog">Add Blog</button>
</form>
