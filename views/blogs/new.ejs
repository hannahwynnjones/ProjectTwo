<section class="about" id="loginId" style="background: url('../assets/images/apples.jpg');   height: 100vh; background-position: center; background-size: cover; margin: -40px 0 20px; z-index: 100;">
<div class="cranBox">


<div class="loginBox">

<h1>Add a dish to you account</h1>

<form method="POST" action="/blogs" enctype="multipart/form-data">

  <div class="form-group">
    <label class="newLabel" for="dish">Dish</label>
    <textarea name="dish" required></textarea>
  </div>

  <div class="form-group">
    <label class="newLabel" for="description">Description</label>
    <textarea name="description" placeholder="recipes, Description and your comments" required></textarea>
  </div>

  <div class="form-group">
    <label class="recipeTag newLabel" for="tag">Tag</label>
    <textarea name="tag" placeholder="One work to describe your dish" maxlength="15"></textarea>
  </div>

  <div class="form-group">
    <label class="newLabel" for="filename">Image file</label>
    <input class="newLabel addBlog" type="file" name="filename" id="filename">
  </div>

  <button class="addBlog">Add dish</button>
</form>

</div>

</div>
</section>
